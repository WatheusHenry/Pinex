{
  "manifest_version": 3,
  "name": "Pinex",
  "version": "1.0.0",
  "description": "A Pinex é uma extensão que te auxilia a salvar ideias e referências, removendo o atrito de ficar navegando entre abas.",
  "permissions": ["activeTab", "storage", "contextMenus", "unlimitedStorage"],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["dist/content.css"]
    }
  ],
  "action": {
    "default_title": "Toggle Sidebar",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["arrow.png", "viewer.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
